<body>

    <h2>Login</h2>
    <div id="alert-box" class="alert"></div>
    <form action="/web/loginuser" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Login</button>
    </form>

    <p style="text-align: center;">Don't have an account? <a href="/web/register">Register here</a></p>

    <script>
        window.onload = function() {
            const params = new URLSearchParams(window.location.search);
            const alertBox = document.getElementById('alert-box');
            
            if (params.has('success')) {
                alertBox.textContent = "Login successful!";
                alertBox.classList.add('alert-success');
                alertBox.style.display = "block";
            } else if (params.has('error')) {
                alertBox.textContent = "Error: " + params.get('error');
                alertBox.classList.add('alert-error');
                alertBox.style.display = "block";
            }
        };
    </script>
