<script>
    const ctx = document.getElementById('roomChart').getContext('2d');
    const roomChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Checked In', 'Booked', 'Available'],
            datasets: [{
                label: 'Number of Rooms',
                data: [10, 15, 5],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1,
                barThickness: 80
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                },
                x: {
                    stacked: false 
                }
            },
            barPercentage: 0.5,
        }
    });
</script>

